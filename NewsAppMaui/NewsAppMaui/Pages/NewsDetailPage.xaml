<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAppMaui.Pages.NewsDetailPage">
    <Grid RowDefinitions="Auto,Auto,Auto">
        <Image Grid.Row="0" x:Name="ImgNews" HeightRequest="200" Aspect="Fill"/>
        <Label Grid.Row="1" x:Name="LbTitle" Margin="10" FontSize="Title"
               FontAttributes="Bold" TextDecorations="Underline"/>
        <Label Grid.Row="2" x:Name="LbContent" Margin="10" FontSize="Body"/>


    </Grid>
</ContentPage>